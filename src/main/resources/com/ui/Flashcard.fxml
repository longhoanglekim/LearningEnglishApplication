<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controller.FlashcardController">
   <children>
      <Pane fx:id="cardPane" layoutX="72.0" layoutY="72.0" prefHeight="248.0" prefWidth="489.0"
            style="-fx-background-color: #DCDCDC#DCDCDC;">
         <Label fx:id="questionLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="206.0" layoutY="106.0"
